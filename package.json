{
  "name": "spass",
  "displayName": "Spaß",
  "description": "Spaß sintax highlighting and code snippets",
  "version": "1.2.1",
  "engines": {
    "vscode": "^1.73.0"
  },
  "publisher": "Ghiiso",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ghiiso/Spass-VS-Code-extension.git"
  },
  "icon": "icons/icon.png",
  "keywords": [
    "spass",
    "Spass"
  ],
  "author": {
    "name": "Davide Ghisolfi"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Education"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "spass",
        "aliases": [
          "Spass",
          "spass"
        ],
        "extensions": [
          ".dfg",
          ".sps",
          ".spass"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "icons/icon_light.png",
          "dark": "icons/icon_dark.png"
        }
      }
    ],
    "commands": [
      {
        "command": "spass.run",
        "title": "Run Spass file",
        "icon": "icons/icon_butt.png"
      }
    ],
    "grammars": [
      {
        "language": "spass",
        "scopeName": "source.spass",
        "path": "./syntaxes/spass.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "spass",
        "path": "./snippets.json"
      }
    ],
    "keybindings":{
      "command": "spass.run",
      "key": "ctrl+alt+s"
    },
    "menus": {
      "editor/title": [
        {
          "when": "editorLangId== spass",
          "command": "spass.run",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "editorLangId== spass",
          "command": "spass.run",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4"
  }
}
